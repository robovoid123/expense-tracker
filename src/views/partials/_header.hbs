<header class="header p-3 text-white">
  <div class="container-fluid px-5">
    <div
      class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
    >
      <a
        href="/"
        class="d-flex align-items-center mb-2 mb-lg-0 fs-5 text-decoration-none"
      >
        Income/Expense App
      </a>

      <ul
        class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0"
      >
      </ul>

      <div class="col-md-3 text-end">
        {{#if user}}
          <a href="/auth/logout" class="btn btn-primary">Logout</a>
        {{else}}
          <a href="/auth/login" class="btn btn-outline-primary me-2">Login</a>
          <a href="/auth/sign-up" class="btn btn-primary">Sign-up</a>
        {{/if}}
      </div>
    </div>
  </div>
</header>